{
  "app-id": "com.mardojai.ForgeSparks",
  "runtime": "org.gnome.Platform",
  "runtime-version": "44",
  "sdk": "org.gnome.Sdk",
  "command": "forge-sparks",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--share=network"
  ],
  "modules": [
    {
      "name": "blueprint",
      "buildsystem": "meson",
      "cleanup": ["*"],
      "sources": [
          {
              "type": "git",
              "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
              "tag": "v0.8.1",
              "commit": "aa7679618e864748f4f4d8f15283906e712752fe"
          }
      ]
    },
    {
      "name": "libportal",
      "buildsystem": "meson",
      "config-opts": [
          "-Ddocs=false",
          "-Dvapi=false",
          "-Dbackends=gtk4"
      ],
      "sources": [
          {
              "type": "archive",
              "url": "https://github.com/flatpak/libportal/releases/download/0.6/libportal-0.6.tar.xz",
              "sha256": "88a12c3ba71bc31acff7238c280de697d609cebc50830c3766776ec35abc6566"
          }
      ]
    },
    {
      "name": "forge-sparks",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/rafaelmardojai/forge-sparks.git",
          "tag": "0.1.0",
          "commit": "aae4b1a337783df3029b87279650e66769e4e85b"
        }
      ]
    }
  ]
}
